package main

import (
	"os"

	"github.com/bspippi1337/restless/internal/app"
	"github.com/bspippi1337/restless/internal/interactive"
	"github.com/bspippi1337/restless/internal/smartcmd"
)

func main() {
	args := os.Args[1:]

	// No args -> interactive shell that reuses app.Run for real functionality.
	if len(args) == 0 {
		os.Exit(interactive.Run(os.Stdin, os.Stdout, os.Stderr))
	}

	// Smart command router (probe/smart/simulate/export). If not handled, fall back to existing CLI.
	if handled, code := smartcmd.Dispatch(args, os.Stdin, os.Stdout, os.Stderr); handled {
		os.Exit(code)
	}

	// Existing CLI behavior
	os.Exit(app.Run(args, os.Stdin, os.Stdout, os.Stderr))
}
